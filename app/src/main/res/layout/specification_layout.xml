<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/layout_bg"
    android:padding="10dp"
    android:paddingStart="10dp"
    android:paddingEnd="20dp">

    <ImageView
        android:id="@+id/specification_icon_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/speed_icon" />

    <TextView
        android:id="@+id/specfication_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/inter_medium"
        android:text="TextView"
        android:textColor="@color/blue"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/specification_icon_view"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/specification_value_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/inter_bold"
        android:text="TextView"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/specification_icon_view"
        app:layout_constraintTop_toBottomOf="@+id/specfication_name" />
</androidx.constraintlayout.widget.ConstraintLayout>